# Maintainer: Luke Labrie-Cleary <luke.cleary@copenhagenatomics.com>
pkgname=python-cad_to_openmc
pkgver=0.2.2
pkgrel=1
pkgdesc="code to target the conversion from a step-file to a h5m-geometry 
		 for neutronics"
arch=('x86_64')
url="https://github.com/openmsr/CAD_to_OpenMC"
license=('MIT')

depends=(
	# add once available
	# moab-5.3.1
	gmsh
	python-pyparsing
	python-cadquery
	python-numpy
	ocp
	python-meshio
	python-trimesh
	python-networkx
	cython
	python-pytest
	mmg
	)
makedepends=(
	git
	python
	cmake
	python-build
	python-installer
	python-wheel
)

provides=("${pkgname%-pkgver}")

source=('https://github.com/openmsr/CAD_to_OpenMC/releases/download/v0.2.2/CAD_to_OpenMC-0.2.2-py3-none-any.whl')
md5sums=('SKIP')

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}