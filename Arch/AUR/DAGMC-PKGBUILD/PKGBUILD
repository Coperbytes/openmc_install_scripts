# Maintainer: aslak stubsgaard <aslak@stubsgaard.dk>

pkgname=dagmc-git
pkgver=git
pkgrel=1
pkgdesc="DAGMC â€“ Direct Accelerated Geometry Monte Carlo"
pkgdir=/opt
arch=(x86_64)
url="https://github.com/svalinn/DAGMC.git"
license=(Simplified BSD)
makedepends=(
	git
	python
	cmake
)
depends=(
	moab
	double-down
)

provides=("${pkgname%}")
source=("${pkgname}::git+${url}.git")
pkgver() {
  cd "$pkgname"
  git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd $srcdir/$pkgname
	mkdir build && cd build
	cmake ../DAGMC -DBUILD_TALLY=ON \
	               -DMOAB_DIR=/opt/moab \
	               -DDOUBLE_DOWN="$include_double_down" \
	               -DBUILD_STATIC_EXE=OFF \
	               -DBUILD_STATIC_LIBS=OFF \
	               -DCMAKE_INSTALL_PREFIX=/opt/DAGMC \
	               -DDOUBLE_DOWN_DIR=/opt/double-down
}

package() {
	make install
}

