# Maintainer: aslak stubsgaard <aslak@stubsgaard.dk>

pkgname=embree
pkgver=git
pkgrel=1
pkgdesc="double-down: A double precision interface to Embree"
pkgdir=/opt
arch=(x86_64)
url="https://github.com/embree/embree.git"
license=(Apache 2.0)
makedepends=(
	git
	make
	cmake
	binutils
	python
	python-numpy
	gcc-fortran
	# eigen
	tbb
	openimageio
)
provides=("${pkgname%}")

build() {
	cd /opt
	git clone ${url}
	cd "$pkgname"
	mkdir build && cd build
	cmake ../embree -DCMAKE_INSTALL_PREFIX=/opt/embree \
	                -DEMBREE_ISPC_SUPPORT=OFF
}

package() {
	make
	make install
}
