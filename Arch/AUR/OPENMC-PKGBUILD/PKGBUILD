# Maintainer: aslak stubsgaard <aslak@stubsgaard.dk>

pkgname=openmc
pkgver=git
pkgrel=1
pkgdesc="OpenMC Monte Carlo Particle Transport Code"
pkgdir=/opt
arch=(x86_64)
url="https://github.com/openmc-dev/openmc"
license=('MIT')
makedepends=(
  cmake
  git
	python
	python-numpy
	python-setuptools
  python-lxml
  python-scipy
  python-pandas
  python-h5py
  python-matplotlib
  python-uncertainties
)
depends=(
	dagmc
)
optdepends=(
  nuclear-data
)
provides=("${pkgname%}")
source=("${pkgname}::git+${url}.git")
pkgver() {
  cd "$pkgname"
  git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}
conflicts=(
	openmc-git
)

build() {
  cd $srcdir/$pkgname
	mkdir build && cd build
  cmake -Doptimize=on \
        -Ddagmc=ON \
        -DDAGMC_ROOT=/opt/dagmc \
        -DHDF5_PREFER_PARALLEL=off ..
}

package() {
  make install
  python ../setup.py install
}
