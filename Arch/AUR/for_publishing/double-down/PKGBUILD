# Maintainer: Luke Labrie-Cleary <luke.cleary@copenhagenatomics.com>
pkgname=double-down-git
pkgver=1.0.0
pkgrel=1
pkgdesc="double-down: A double precision interface to Embree"
pkgdir=/opt
arch=(x86_64)
url="https://github.com/pshriwise/double-down"
license=(MIT)
depends=(
	moab
)
makedepends=(
	git
	python
	cmake
	binutils
	make
	gcc-fortran
	eigen
)

provides=("${pkgname%}")
source=("${pkgname}::git+${url}.git")
pkgver() {
  cd "$pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd $srcdir/$pkgname
	mkdir build && cd build
	cmake .. -DMOAB_DIR=/opt/moab \
	         -DEMBREE_DIR=/opt/embree \
		 	 -DCMAKE_INSTALL_PREFIX=/opt/double-down
}

package() {
	cd $srcdir/$pkgname/build
	sudo make
	sudo make install
}
sha256sums=('4b82e8a5080752daee699aa25218d365b962147600f2931e9015f6a4ccc42394')
