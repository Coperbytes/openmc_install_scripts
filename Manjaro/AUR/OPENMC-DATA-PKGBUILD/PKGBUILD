	python
	cmake
)
provides=("${pkgname%}")

build() {
	# add line where it asks the user which libraries to download
	cd /opt
	mkdir "$pkgname"
	cd "$pkgname"
	wget ${url}
}

package() {
	for entry in "$PWD"/*
	do
	  tar -xvf $entry
	done
	# need to set up path to datafiles
}
